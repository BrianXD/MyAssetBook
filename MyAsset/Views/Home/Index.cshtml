@model MyAsset.Models.ViewModels.AssetViewModel
@using MyAsset.Helper
<p>@Html.Raw(Html.MyShowControllerAndActionName())</p>
@using (Html.BeginForm())
{
    <div class="well">
        <form class="form-horizontal">
            <div class="form-group">
                    @Html.LabelFor(d => d.Categories, new { @class = "col-sm-2 control-labe" })           
                <div class="col-sm-10">
                            
                    @Html.EnumDropDownListFor(d => d.Categories,"請選擇類別",  new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.Categories)
                </div>
            </div>
            <div class="form-group">              
                @Html.LabelFor(d => d.Money, new { @class = "col-sm-2 control-labe" })
                <div class="col-sm-10">
                   
                    @Html.EditorFor(d => d.Money, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(d => d.Money)
                </div>
            </div>
            <div class="form-group">                
                @Html.LabelFor(d => d.CreatedDate, new { @class = "col-sm-2 control-labe" })
                <div class="col-sm-10">                    
                    @Html.EditorFor(d => d.CreatedDate, new { htmlAttributes = new { @class = "form-control", placeholder = "yyyy/MM/dd" } })
                    @Html.ValidationMessageFor(d => d.CreatedDate)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.Remark, new { @class = "col-sm-2 control-labe" })
                <div class="col-sm-10">                
                    @Html.EditorFor(d => d.Remark, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(d => d.Remark)
                </div>
            </div>           
            <div class="form-group">
                <div class="text-center">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
        </form>

    </div>
}
@Html.Action("AssetList") 


